<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lazy Challenges and Tips"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:textColor="@color/charcoal_gray"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />


        <ImageView
            android:id="@+id/sustLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="Sust Logo"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">


            <ImageView
                android:id="@+id/challenge1Image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/sust_logo"
                android:scaleType="centerCrop"
                android:contentDescription="Challenge 1 Image"
                android:layout_marginBottom="8dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/challenge1Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stay in bed for 2 hours"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/charcoal_gray"
                    android:padding="8dp" />


                <ImageButton
                    android:id="@+id/likeButton1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Like Button"
                    android:src="@drawable/ic_like" />


                <TextView
                    android:id="@+id/likeCount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/charcoal_gray" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/challenge2Image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                android:contentDescription="Challenge 2 Image"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/challenge2Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Only eat snacks today"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/charcoal_gray"
                    android:padding="8dp" />

                <ImageButton
                    android:id="@+id/likeButton2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Like Button"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/likeCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/charcoal_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
